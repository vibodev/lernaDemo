    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/package-lock.json"
  ],
  "version": "independent"
