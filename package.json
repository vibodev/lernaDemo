{
  "name": "root",
  "npmClient": "yarn",
  "private": true,
  "scripts": {
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.css": [
      "stylelint --cache --fix",
      "prettier --write",
      "git add"
    ],
    "packages/*/src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "commitlint-config-cz": "^0.13.0",
    "cz-customizable": "^6.2.0",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "standard": "^14.3.1",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {}
}
