{
  "name": "root",
  "npmClient": "yarn",
  "private": true,
  "scripts": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.css": [
      "stylelint --cache --fix",
      "prettier --write",
      "git add"
    ],
    "packages/*/src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "standard": "^14.3.1",
    "stylelint": "^13.2.0"
  },
  "dependencies": {}
}
